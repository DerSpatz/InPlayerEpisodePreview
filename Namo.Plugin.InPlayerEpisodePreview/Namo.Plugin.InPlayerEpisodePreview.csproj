<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.8.*" />
    <PackageReference Include="Jellyfin.Model" Version="10.8.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\configPage.html" />
    <None Remove="Web\inPlayerPreview.js" />
    <EmbeddedResource Include="Web\inPlayerPreview.js" />
    <None Remove="Web\inPlayerPreviewStyle.css" />
    <EmbeddedResource Include="Web\inPlayerPreviewStyle.css" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(ProjectDir)Web\inPlayerPreview.js"
          CopyToOutputDirectory="PreserveNewest"
          Link="web-client\extension\inPlayerPreview.js" />
    <None Include="$(ProjectDir)JMPClient-Stubs\inPlayerPreviewPlugin.js"
          CopyToOutputDirectory="PreserveNewest"
          Link="web-client\extension\inPlayerPreviewPlugin.js" />
    <None Include="$(ProjectDir)JMPClient-Stubs\nativeshell.js"
          CopyToOutputDirectory="PreserveNewest"
          Link="web-client\extension\nativeshell.js" />
  </ItemGroup>
</Project>
